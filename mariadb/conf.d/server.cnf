[mariadb]
host-cache-size=0
skip-name-resolve

[mysqld]
pid-file                = /run/mysqld/mysqld.pid
basedir                 = /usr
expire_logs_days        = 3
character-set-server  = utf8mb4
collation-server      = utf8mb4_general_ci

bind-address = 127.0.0.1
port = 3306

event_scheduler=ON
max_connections=1024
